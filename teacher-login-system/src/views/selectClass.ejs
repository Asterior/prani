<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="/css/tailwind.css" rel="stylesheet">
    <title>Select Class</title>
</head>
<body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="bg-white p-8 rounded-lg shadow-md w-96">
        <h1 class="text-2xl font-bold mb-4">Select Class</h1>
        <form action="/results" method="GET">
            <div class="mb-4">
                <label for="class" class="block text-sm font-medium text-gray-700">Choose a class:</label>
                <select id="class" name="class" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-opacity-50">
                    <% classes.forEach(function(class) { %>
                        <option value="<%= class.id %>"><%= class.name %></option>
                    <% }); %>
                </select>
            </div>
            <button type="submit" class="w-full bg-blue-500 text-white py-2 rounded-md hover:bg-blue-600">View Results</button>
        </form>
    </div>
</body>
</html>